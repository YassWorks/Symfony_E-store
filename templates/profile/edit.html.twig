{% extends 'base.html.twig' %}

{% block title %}Edit Profile
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/seller.css') }}">
{% endblock %}

{% block body %}
	<div class="container py-4">
		<div class="row justify-content-center">
			<div class="col-lg-8">
				<div class="card border-0 shadow-sm">
					<div class="card-header bg-white border-0 py-3">
						<h2 class="mb-0 fw-bold">
							<span class="material-icons-outlined me-2" style="font-size: 2rem; vertical-align: middle;">
								edit
							</span>
							Edit Profile
						</h2>
					</div>
					<div class="card-body p-4">
						
						{% for message in app.flashes('success') %}
							<div class="alert alert-success alert-dismissible fade show" role="alert">
								<span class="material-icons-outlined me-2">check_circle</span>
								{{ message }}
								<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
							</div>
						{% endfor %}

						{% for message in app.flashes('error') %}
							<div class="alert alert-danger alert-dismissible fade show" role="alert">
								<span class="material-icons-outlined me-2">error_outline</span>
								{{ message }}
								<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
							</div>
						{% endfor %}

						{{ form_start(form) }}

						<div class="row">
							<div class="col-md-6 mb-3">
								{{ form_label(form.name, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
								{{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter your full name'}}) }}
								{{ form_errors(form.name) }}
							</div>

							<div class="col-md-6 mb-3">
								{{ form_label(form.email, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
								{{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email address'}}) }}
								{{ form_errors(form.email) }}
								<div class="form-text">
									<span class="material-icons-outlined me-1" style="font-size: 14px; vertical-align: middle;">info</span>
									You will need to log in again if you change your email address.
								</div>
							</div>
						</div>

						<div class="d-flex justify-content-between align-items-center mt-4">
							<a href="{{ path('profile') }}" class="btn btn-outline-secondary">
								<span class="material-icons-outlined me-1">arrow_back</span>
								Cancel
							</a>
							
							{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
						</div>

						{{ form_end(form) }}

					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
