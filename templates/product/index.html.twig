{# templates/product/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1 class="mb-4">Product List</h1>

    <div class="row">
        {% for product in products %}
            <div class="col-md-4 mb-3">
                <div class="card">
                    {% if product.images|length > 0 %}
                        {# take first image #}
                        {% set image = product.images[0] %}
                        <img src="{{ asset('uploads/shop_logos/' ~ image.filename) }}" class="card-img-top" alt="{{ product.title }}" style="max-width: 200px; max-height: 200px;">
                    {% else %}
                        <img src="{{ asset('uploads/default.jpg') }}" class="card-img-top" alt="No image">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ product.title }}</h5>
                        <p class="card-text">{{ product.description|slice(0, 100) ~ '...' }}</p>
                        <a href="{{ path('product_show', {id: product.id}) }}" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>No products found.</p>
        {% endfor %}
    </div>
{% endblock %}
