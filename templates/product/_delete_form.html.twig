<form method="post" action="{{ path('product_delete', {id: product.id}) }}" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this product?')" title="Delete Product">
        <span class="material-icons-outlined">delete</span>
    </button>
</form>
