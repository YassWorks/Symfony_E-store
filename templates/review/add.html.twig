{# templates/review/add.html.twig #}
<div class="container py-5">
	<h1>Give or modify your Rate "{{ product.title }}"</h1>

	{{ form_start(form, {
		'attr': {'class': 'review-form'},
		'action': path('product_review', {'id': product.id}),
		'method': 'POST'
	}) }}

	{{ form_widget(form.rating, { attr: { style: 'display:none' } }) }}

	<div class="rating-input mb-3">
		{% for i in 1..5 %}
			<span class="material-icons-outlined star-icon" data-value="{{ i }}">
				star_outline
			</span>
		{% endfor %}
	</div>

	<div class="mb-3">
		{{ form_row(form.comment, {
			'attr': {
				'class': 'form-control',
				'placeholder': 'Your Comment...'
			}
		}) }}
	</div>

	<button type="submit" class="btn btn-success">Send</button>
	{{ form_end(form) }}
</div>
